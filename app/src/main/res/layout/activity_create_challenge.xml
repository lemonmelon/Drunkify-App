<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainColor">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gem"
            android:layout_gravity="right"
            android:id="@+id/saveNewChallengeButton"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Challenge text"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/newChallengeText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Extra Name"
                android:id="@+id/extraName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="modifier"
                android:id="@+id/extraModifier"/>

        </LinearLayout>


        <NumberPicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newChallengePunishmentPicker">

        </NumberPicker>

</LinearLayout>